<% if post.favorited_by?(current_user) %>
  <p>
    <%= link_to post_favorites_path(post), method: :delete, remote: true,class: 'text-dark'  do %>
      ♥<%= post.favorites.count %> いいね
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to post_favorites_path(post), method: :post, remote: true,class: 'text-dark' do %>
      ♡<%= post.favorites.count %> いいね
    <% end %>
  </p>
<% end %>