<%= form_with model: @training_spot, url: training_spot_index_path, local:true do |f| %>
  <div class="spot">
    <%= f.label :address, "練習場所" %>
    <%= f.text_field :address, placeholder: "練習場所を入力", id: "address" %>
    <%= f.label :prefectures, "都道府県" %>
    <%= f.text_field :prefectures, placeholder: "都道府県を入力", id: "address" %>
    <%= f.submit '投稿', class: 'ml-5 mr-3 btn btn-sm btn-warning text-white' %>
  </div>
<% end %>
<div id='map' style = "width: 600px; height: 400px;"></div>

