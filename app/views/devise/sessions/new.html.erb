<div class="container">
  <div class="row">

    <div class="card">
      <div class="card-body">

        <h5 class="card-title text-cneter">ログインフォーム</h5>

        <%= form_with model: @user, url: user_session_path, local: :true do |f| %>

        <div class="field card-text mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control", :placeholder => "email"%>
        </div>

        <div class="field card-text mt-2">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", :placeholder => "パスワード" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>

        <% end %>

      </div>
    </div>

      <%= render "devise/shared/links" %>
  </div>
</div>