<%= form_with model: @post, local:true do |f| %>
    <div class="row mt-4">
      <div class="form-inline mx-auto">
        <% if @post.is_draft == true %>
          <%= f.submit "下書きを公開", :name => 'publicize_draft', class:'mr-5 btn btn-sm btn-warning' %>
        <% else %>
          <%= f.submit "下書き更新", :name => 'update_post', class:'btn btn-sm btn-warning text-light' %>
        <% end %>
      </div>
    </div>
    <div class="mt-4 pb-3 text-center">
      <u><%= link_to "下書きを削除", "/post/#{@post.id}", method: :delete, data: {confirm: "下書きを削除しますか？"}, class:'text-danger' %></u>
    </div>
  <% end %>